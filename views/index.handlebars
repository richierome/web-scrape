
<div class="container">
{{#each articles}}
<div class="card">
  <div class="card-header">
    {{heading}}
  </div>
  <div class="card-body">
  
    <p class="card-text">{{summary}}</p>
    
    <a href="{{link}}" class=>{{link}}</a>
    <p>comments</p>
    {{#each comments}}

    <p>{{comment}}</p>
    <p>{{author}}</p>

    {{/each}}
    {{#unless comments }}
    <p>no comments found</p>
    {{/unless}}
  </div>
  {{!-- comments section --}}
  <form action="/comment" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">AUTHOR</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name ="author" placeholder=>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">COMMENT</label>
    <input type="text" class="form-control" id="exampleInputPassword1" name ="comment" placeholder=>
  </div>
  <input type="hidden" name="_id" value="{{_id}}">
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
{{/each}}
</div>


